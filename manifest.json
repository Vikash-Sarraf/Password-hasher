{
  "manifest_version": 2,
  "name": "Password Hasher",
  "version": "1.0",
  "description": "Hashes passwords using bcrypt.js",
  "permissions": ["activeTab"],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.bundle.js"]
    }
  ]
}
